<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/edit.css">
<%- include('../partials/nav') %>

<section class="secT">
  <h1>Edit this Recipe!</h1>
  <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
    <label class="labE">
      Name of Recipe: 
      <input type="text" name="name" value="<%= recipe.name %>" autocomplete="off">
    </label>
    <br>
    <label class="labE">
      Ingredients:
      <input type="text" name="ingredient" value="<%= recipe.ingredients %>" autocomplete="off">
    </label>
    <br>
    <label class="labE">
      Preparation:
      <input type="text" name="preparation" value="<%= recipe.preparation %>">
    </label>
    <br>
    <label class="labE">
      Preparation Time:
      <input type="number" name="prepTime" value="<%= recipe.prepTime %>" autocomplete="off" for="select">
    </label>
    <select name="" id="">
      <option value="min">minute</option>
      <option value="mins">minutes</option>
      <option value="hr">hour</option>
      <option value="hrs">hours</option>
    </select>
    <br>
    <label class="labE" for="servingSizeSelect" value="<%= recipe.servingSize %>">Serving Size:</label>
    <select name="servingSize" id="serving-select">
      <option value="1">1 person</option>
      <option value="2">2 people</option>
      <option value="3">3 people</option>
      <option value="4">4 people</option>
      <option value="5">5 people</option>
      <option value="6">6 people</option>
      <option value="7">7 people</option>
      <option value="8">8 people</option>
      <option value="9">9 people</option>
      <option value="10">10 people</option>
      <option value="11">11 people</option>
      <option value="12">12 people</option>
    </select>
    <br>
    <button class="arE" type="submit">Add Recipe</button>
  </form>
</section>
<%- include('../partials/footer') %>