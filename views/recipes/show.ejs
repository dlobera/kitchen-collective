<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title></title>
</head>
<body>
  <h1><%= title %> </h1>
  <div>

  </div>
  <div>
    <h1><%= recipe.owner %></h1>
    <a href="/recipes/<%=recipe._id%>/edit">
      <button>Edit Recipe</button></a>
    <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
      <button>Delete Recipe</button></a>
    </form>
  </div>
  <br>
  <div>Recipe Name:</div>
  <div><%= recipe.name %> </div>
  <div>Ingredients:</div>
  <div><%= recipe.ingredients %> </div>
  <div>Preparation:</div>
  <div><%= recipe.preparation %> </div>
  <div>Preparation Time:</div>
  <div><%= recipe.prepTime %> </div>
  <div>Serving Size:</div>
  <div><%= recipe.servingSize %> </div>


  <% recipe.comments.forEach(function(comment) { %>
    <li class="card-text"><%= comment.comment %></li>
  <% }) %>
  <form
    action="/recipes/<%= recipe._id %>/comments"
    method="POST"
    class="input-group"
  >
  <input
    type="text"
    name="comment"
    class="form-control form-control-dark"
    placeholder="Add a comment..."
    autocomplete="off"
    required
  />
  <button type="submit" class="btn btn-primary">
    Add Comment
  </button>
</form>
</body>
</html>
<%- include('../partials/footer') %>