<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/show.css" />
<%- include('../partials/nav') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title></title>
</head>
<body>
  <!-- <h1><%= title %> </h1> -->
  <div>
  
  </div>
  <br>
  <div>
    <% if (recipe.owner.equals(user.profile._id)) { %>
      <a href="/recipes/<%=recipe._id%>/edit">
        <button>Edit Recipe</button></a>
      <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
        <button>Delete Recipe</button></a>
      </form>
    <% } %>
  </div>
  <br>
  <div class="card">
    <div class="name">Recipe Name:</div>
    <div class="recN"><%= recipe.name %> </div>
    <br>
    <div class="ing">Ingredients:</div>
    <div class="recI"><%= recipe.ingredients %> </div>
    <br>
    <div class="prep">Instructions:</div>
    <div class="recP"><%= recipe.preparation %> </div>
    <br>
    <div class="pt">Preparation Time:</div>
    <div class="recPt"><%= recipe.prepTime %> </div>
    <br>
    <div class="ss">Serving Size:</div>
    <div class="recSS"><%= recipe.servingSize %> </div>
  </div> 
<br>
<div class="com">
  <div class="comS">
  <% recipe.comments.forEach(function(comment) { %>
    <li class="card-text"><%= comment.comment %></li>
  <% }) %>
  </div>
  <form
    action="/recipes/<%= recipe._id %>/comments"
    method="POST"
    class="input-group"
  >
  <input
    type="text"
    name="comment"
    class="form-control form-control-dark"
    placeholder="Add a comment..."
    autocomplete="off"
    required
  />
  <br>
  <button type="submit" class="btn btn-primary">
    Add Comment
  </button>
  </form>
</div>
</body>
</html>
<%- include('../partials/footer') %>